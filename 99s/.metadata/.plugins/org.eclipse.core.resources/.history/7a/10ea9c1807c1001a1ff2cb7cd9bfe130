	//비밀번호 변경하기 
	@RequestMapping("/updatePw.gg")
	public String updatePw(String newPw) {
		
		//파라미터
		//회원정보(id)
		String id="test";
		//비즈니스
		//변경된 비밀번호 db업데이트
