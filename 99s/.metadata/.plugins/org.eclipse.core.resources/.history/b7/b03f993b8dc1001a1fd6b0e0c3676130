<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FreeBoard">
	
	<select id="getRecentList" resultType="com.ggs.DTO.FreeBoardDTO">
		SELECT id,title, writedate, views FROM freeboard 
		UNION SELECT id,title, writedate, views FROM inforerrorboard
		WHERE isvisible = 1
		ORDER BY writedate DESC LIMIT 5;
	</select>
	
	
</mapper>

